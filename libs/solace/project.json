{
  "name": "solace",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/solace/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/solace",
        "main": "libs/solace/src/index.ts",
        "tsConfig": "libs/solace/tsconfig.lib.json",
        "assets": ["libs/solace/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/solace/jest.config.ts"
      }
    }
  }
}

